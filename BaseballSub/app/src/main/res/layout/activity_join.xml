<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f3f52">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLoginId"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:width="230dp"
        android:hint="ID"
        android:inputType="textUri" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패스워드"
        android:id="@+id/textView3"
        android:layout_below="@+id/userLoginId"
        android:layout_alignLeft="@+id/userLoginId"
        android:layout_alignStart="@+id/userLoginId"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLoginPw"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:width="335dp"
        android:hint="PASSWORD"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/textView4"
        android:layout_below="@+id/userLoginPw"
        android:layout_alignLeft="@+id/userLoginPw"
        android:layout_alignStart="@+id/userLoginPw"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:width="335dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:hint="NAME"
        android:inputType="textUri" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/userName"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAge"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:width="335dp"
        android:hint="AGE"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:id="@+id/button4"
        android:background="#3d9577"
        android:width="250dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/userAge"
        android:layout_alignLeft="@+id/userAge"
        android:layout_alignStart="@+id/userAge"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/userAge"
        android:layout_alignEnd="@+id/userAge"
        android:onClick="onRequestButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/userLoginId"
        android:layout_toRightOf="@+id/userLoginId"
        android:layout_alignRight="@+id/userLoginPw"
        android:layout_alignEnd="@+id/userLoginPw"
        android:background="#c84522"
        android:onClick="onIdCheckButtonClicked" />

</RelativeLayout>
